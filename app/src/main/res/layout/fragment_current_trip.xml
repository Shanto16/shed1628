<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/cardview_current_trip"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">

           <Button
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:text="Navigation"
               android:drawableLeft="@drawable/ic_navigate"
              />

           <Button
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:text="Restaurants"
               android:drawableLeft="@drawable/ic_restaurants"
               />
           <Button
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:text="Fuel Stations"
               android:drawableLeft="@drawable/ic_gas_pumps"
               />

           <Button
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:text="Police Station"
               android:drawableLeft="@drawable/ic_police_station"
               />



           <Button
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:text="My Expense"
               android:drawableLeft="@drawable/ic_my_expense"
               android:layout_marginTop="32dp"
               />




       </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Hotels"
                android:drawableLeft="@drawable/ic_local_hotels"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Hospitals"
                android:drawableLeft="@drawable/ic_hospitals"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Tourist Spots"
                android:drawableLeft="@drawable/ic_tourist_spots"
                />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_maps"
                android:text="Maps" />

            <Button
                android:id="@+id/team_expense_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Team Expense"
                android:drawableLeft="@drawable/ic_team_expense"
                android:layout_marginTop="32dp"
                />



        </LinearLayout>




    </LinearLayout>

    <Button

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Dismiss"
        android:drawableLeft="@drawable/ic_dismiss_trip"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="End Trip"
        android:drawableLeft="@drawable/ic_end_trip"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"/>


</LinearLayout>

</ScrollView>