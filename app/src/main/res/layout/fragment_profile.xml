<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/propic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:elevation="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/propic"
            app:civ_border_color="#616161"
            app:civ_border_width="2dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-70dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/name_pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:ems="15"
                    android:hint="Name"
                    android:layout_marginEnd="16dp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Name"
                    app:met_iconLeft="@drawable/ic_assignment_ind_white_24dp" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/phone_pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:hint="Phone "
                    android:layout_marginEnd="16dp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Phone"
                    app:met_iconLeft="@drawable/ic_call_white_24dp"
                    app:met_maxCharacters="15" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/email_pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:hint="Email"
                    android:layout_marginEnd="16dp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Email"
                    app:met_iconLeft="@drawable/ic_email_white_24dp" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/address_pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:hint="Address"
                    android:layout_marginEnd="16dp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Address"
                    app:met_iconLeft="@drawable/ic_edit_location_white_24dp" />


                <com.ornach.nobobutton.NoboButton
                    android:id="@+id/save_pro"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    app:text="Save"
                    app:borderColor="#FFFFFF"
                    app:borderWidth="4dp"
                    app:backgroundColor="@color/colorAccent"
                    app:focusColor="@color/colorPrimary"
                    app:textColor="#FFF"
                    app:radius="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>
