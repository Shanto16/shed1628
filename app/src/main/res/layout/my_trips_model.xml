<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layout_marginTop="4dp">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/bg_trip"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_test" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_shadow_gradient" />

        <TextView
            android:id="@+id/tour_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="75dp"
            android:layout_marginStart="8dp"
            android:text="Dhaka - Bandarbans"
            android:textColor="#ffffff"
            android:textSize="24sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp">


            <TextView
                android:id="@+id/tour_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="13dp"
                android:textColor="#757575"
                />


            <TextView
                android:id="@+id/tour_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tour_date_txt"
                android:text="9/10/2017"
                android:textColor="#757575"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/tour_date"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ic_total_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Team Size: "
                    android:textSize="13dp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/trip_total_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:text="7"
                    android:textSize="13dp"
                    android:textColor="#757575"
                     />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/ic_expense_per_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Avg. expense: "
                    android:textSize="13dp"
                    android:textColor="#757575"
                    />

                <TextView
                    android:id="@+id/trip_expense_per_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="$400"
                    android:textColor="#757575"
                    android:textSize="13dp" />


            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>